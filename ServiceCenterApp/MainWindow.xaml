<Window x:Class="ServiceCenterApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ServiceCenterApp" 
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="675" Width="1200">


    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding Path=Width, ElementName=MenuToggleButton}" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Rectangle x:Name="MenuToggleButton" Width="50" Visibility="Collapsed"/>

        
        <DockPanel Grid.Row="0" Grid.Column="0">
            <ToggleButton FontSize="18" HorizontalAlignment="Left" Style="{StaticResource HamburgerButtonStyle}">
                <ToggleButton.Triggers>
                    <!-- Expanded -->
                    <EventTrigger RoutedEvent="ToggleButton.Checked">
                        <BeginStoryboard Storyboard="{StaticResource OpenMenu}" />
                    </EventTrigger>
                    <!-- Hidden -->
                    <EventTrigger RoutedEvent="ToggleButton.Unchecked">
                        <BeginStoryboard Storyboard="{StaticResource CloseMenu}" />
                    </EventTrigger>
                </ToggleButton.Triggers>
            </ToggleButton>
            <TextBlock Text="ServiceCRM" Foreground="{StaticResource WhiteTextBrush}" VerticalAlignment="Center" FontSize="20" Margin="10 0 0 0"/>
        </DockPanel>


        <StackPanel Grid.Row="1" Grid.Column="0" ClipToBounds="True">

            <Separator Margin="0 0 0 0" Foreground="{StaticResource ForegroundBrush}"/>

            <Button Content="Пункт 1" Margin="5" Style="{StaticResource MenuButtonStyle}" Tag="{StaticResource HomeIcon}" />
            <Button Content="Пункт 2" Margin="5" Style="{StaticResource MenuButtonStyle}" />
            <Button Content="Пункт 3" Margin="5" Style="{StaticResource MenuButtonStyle}" />
        </StackPanel>

        <Border Grid.Column="1" Grid.RowSpan="2" Background="WhiteSmoke">
            <TextBlock Text="Основной контент приложения" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
        </Border>
    </Grid>
</Window>