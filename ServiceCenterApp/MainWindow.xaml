<Window x:Class="ServiceCenterApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ServiceCenterApp" 
        xmlns:vm="clr-namespace:ServiceCenterApp.ViewModels"
        xmlns:converters="clr-namespace:ServiceCenterApp.Converters"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="675" Width="1300" MinHeight="700" MinWidth="600"
        Loaded="MainWindow_OnLoaded"
        Language="be-BY">

    <Window.Resources>
        <converters:MenuWidthConverter x:Key="MenuWidthConverter"/>
    </Window.Resources>

    <Grid Background="{StaticResource LightBackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition>
                <ColumnDefinition.Width>
                    <MultiBinding Converter="{StaticResource MenuWidthConverter}">
                        <Binding Path="IsMenuVisible"/>
                        <Binding ElementName="MenuToggleButton" Path="Width"/>
                    </MultiBinding>
                </ColumnDefinition.Width>
            </ColumnDefinition>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Frame x:Name="MessageFrame" Grid.ColumnSpan="2" Grid.RowSpan="2"/>

        <!--Menu size helper for animation-->
        <Rectangle x:Name="MenuToggleButton" Width="{Binding MenuWidth, Mode=TwoWay}" Visibility="Collapsed">
            <Rectangle.Style>
                <Style TargetType="Rectangle">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsMenuExtended}" Value="True">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard Storyboard="{StaticResource OpenMenuStyle}"/>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard Storyboard="{StaticResource CloseMenuStyle}"/>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Rectangle.Style>
        </Rectangle>


        <DockPanel Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" ClipToBounds="True" Background="{StaticResource DarkBackgroundBrush}">
            <StackPanel DockPanel.Dock="Top">
                <DockPanel Height="50">
                    <ToggleButton IsChecked="{Binding IsMenuExtended, Mode=TwoWay}" FontSize="18" HorizontalAlignment="Left" Style="{StaticResource HamburgerButtonStyle}" />
                    <TextBlock Text="ServiceCRM" Foreground="{StaticResource WhiteTextBrush}" VerticalAlignment="Center" FontSize="20" Margin="10 0 0 0"/>
                </DockPanel>
                <Separator Margin="0 0 0 0" Foreground="{StaticResource LightBackgroundBrush}"/>
                <Button Content="Краткая сводка" Margin="5" Style="{StaticResource MenuButtonStyle}" Tag="{StaticResource ChartsIcon}" 
                        Visibility="{Binding DashBoardVisibility}" 
                        Command="{Binding NavigateCommand}" 
                        CommandParameter="Dashboard"/>
                <Button Content="Все заявки" Margin="5" Style="{StaticResource MenuButtonStyle}" Tag="{StaticResource OrdersIcon}" 
                        Visibility="{Binding OrdersVisibility}"
                        Command="{Binding NavigateCommand}" 
                        CommandParameter="Orders"/>
                <Button Content="Клиенты" Margin="5" Style="{StaticResource MenuButtonStyle}" Tag="{StaticResource ClientsIcon}" 
                        Visibility="{Binding ClientsVisibility}"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="Clients"/>
                <Button Content="Персонал" Margin="5" Style="{StaticResource MenuButtonStyle}" Tag="{StaticResource EmployeesIcon}" Visibility="{Binding EmployeesVisibility}"/>
                <Button Content="Склад" Margin="5" Style="{StaticResource MenuButtonStyle}" Tag="{StaticResource StorageIcon}" Visibility="{Binding StorageVisibility}"/>
                <Button Content="Финансы" Margin="5" Style="{StaticResource MenuButtonStyle}" Tag="{StaticResource FinanceIcon}" Visibility="{Binding FinanceVisibility}"/>
            </StackPanel>

            <StackPanel VerticalAlignment="Bottom" Margin="0 0 0 10">
                <Button Content="Профиль" Margin="5" Style="{StaticResource MenuButtonStyle}" Tag="{StaticResource UserIcon}" />
                <Button Content="Выйти" Margin="5" Style="{StaticResource MenuButtonStyle}" Tag="{StaticResource ExitIcon}"/>

            </StackPanel>
        </DockPanel>

        <Border Grid.Column="1" Grid.RowSpan="2" Background="{StaticResource LightBackgroundBrush}">
            <Frame Name="MainFrame" NavigationUIVisibility="Hidden" Source="" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  />
        </Border>
    </Grid>
</Window>
    
    