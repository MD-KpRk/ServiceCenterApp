<Window x:Class="ServiceCenterApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ServiceCenterApp" 
        xmlns:vm="clr-namespace:ServiceCenterApp.ViewModels"
        xmlns:converters="clr-namespace:ServiceCenterApp.Converters"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="675" Width="1200"
        Loaded="MainWindow_OnLoaded">

    <Window.Resources>
        <converters:MenuWidthConverter x:Key="MenuWidthConverter"/>
    </Window.Resources>

    <Grid Background="{StaticResource ForegroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition>
                <ColumnDefinition.Width>
                    <MultiBinding Converter="{StaticResource MenuWidthConverter}">
                        <Binding Path="IsMenuVisible"/>
                        <Binding ElementName="MenuToggleButton" Path="Width"/>
                    </MultiBinding>
                </ColumnDefinition.Width>
            </ColumnDefinition>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--Menu size helper for animation-->
        <Rectangle x:Name="MenuToggleButton" Width="{Binding MenuWidth, Mode=TwoWay}" Visibility="Collapsed">
            <Rectangle.Style>
                <Style TargetType="Rectangle">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsMenuExtended}" Value="True">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard Storyboard="{StaticResource OpenMenuStyle}"/>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard Storyboard="{StaticResource CloseMenuStyle}"/>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Rectangle.Style>
        </Rectangle>


        <StackPanel Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" ClipToBounds="True" Background="{StaticResource BackgroundBrush}">
            <DockPanel Height="50">
                <ToggleButton IsChecked="{Binding IsMenuExtended, Mode=TwoWay}" FontSize="18" HorizontalAlignment="Left" Style="{StaticResource HamburgerButtonStyle}" />
                <TextBlock Text="ServiceCRM" Foreground="{StaticResource WhiteTextBrush}" VerticalAlignment="Center" FontSize="20" Margin="10 0 0 0"/>
            </DockPanel>
            <Separator Margin="0 0 0 0" Foreground="{StaticResource ForegroundBrush}"/>
            <Button Content="Пункт 1" Margin="5" Style="{StaticResource MenuButtonStyle}" Tag="{StaticResource HomeIcon}" />
            <Button Content="Пункт 2" Margin="5" Style="{StaticResource MenuButtonStyle}" />
            <Button Content="Пункт 3" Margin="5" Style="{StaticResource MenuButtonStyle}" />
        </StackPanel>

        <Border Grid.Column="1" Grid.RowSpan="2" Background="{StaticResource ForegroundBrush}">
            <Frame Name="MainFrame" NavigationUIVisibility="Hidden" Source="" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  />
        </Border>
    </Grid>
</Window>
    
    