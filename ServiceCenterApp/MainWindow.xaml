<Window x:Class="ServiceCenterApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ServiceCenterApp" 
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="675" Width="1200">
    
    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="MenuColumn" Width="40" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ToggleButton x:Name="MenuToggleButton" FontSize="18" HorizontalAlignment="Center" Style="{StaticResource HamburgerButtonStyle}"/>

            <StackPanel Grid.Row="1" Grid.Column="0" ClipToBounds="True">
            <Button Content="Пункт 1" Margin="5"/>
            <Button Content="Пункт 2" Margin="5"/>
            <Button Content="Пункт 3" Margin="5"/>
        </StackPanel>

        <Border Grid.Column="1" Grid.RowSpan="2" Background="WhiteSmoke">
            <TextBlock Text="Основной контент приложения" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
        </Border>
    </Grid>


</Window>