<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="GripBarStyle" TargetType="Border">
        <Setter Property="Width" Value="3"/>
        <Setter Property="Height" Value="12"/>
        <Setter Property="Margin" Value="0,2"/>
        <Setter Property="CornerRadius" Value="1.5"/>
        <Setter Property="Background" Value="#B0B0B0"/>
    </Style>

    <Style x:Key="ModernGridSplitterStyle" TargetType="GridSplitter">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Width" Value="5"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="GridSplitter">
                    <Border Background="{TemplateBinding Background}" Cursor="SizeWE">
                        <Grid>
                            <Border x:Name="IndicatorLine"
                                    Background="#DCDCDC" 
                                    Width="1"
                                    HorizontalAlignment="Center"/>

                            <StackPanel x:Name="GripIcon" 
                                        VerticalAlignment="Center" 
                                        HorizontalAlignment="Center">
                                <Border x:Name="GripBar1" Style="{StaticResource GripBarStyle}"/>
                                <Border x:Name="GripBar2" Style="{StaticResource GripBarStyle}"/>
                                <Border x:Name="GripBar3" Style="{StaticResource GripBarStyle}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="IndicatorLine" Storyboard.TargetProperty="Width" 
                                                       To="3" Duration="0:0:0.15"/>
                                        <ColorAnimation Storyboard.TargetName="IndicatorLine" Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                                        To="{StaticResource PrimaryColor}" Duration="0:0:0.15"/>

                                        <ColorAnimation Storyboard.TargetName="GripBar1" Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)" To="White" Duration="0:0:0.15"/>
                                        <ColorAnimation Storyboard.TargetName="GripBar2" Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)" To="White" Duration="0:0:0.15"/>
                                        <ColorAnimation Storyboard.TargetName="GripBar3" Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)" To="White" Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="IndicatorLine" Storyboard.TargetProperty="Width" 
                                                       To="1" Duration="0:0:0.15"/>
                                        <ColorAnimation Storyboard.TargetName="IndicatorLine" Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                                        To="#DCDCDC" Duration="0:0:0.15"/>

                                        <ColorAnimation Storyboard.TargetName="GripBar1" Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)" To="#B0B0B0" Duration="0:0:0.15"/>
                                        <ColorAnimation Storyboard.TargetName="GripBar2" Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)" To="#B0B0B0" Duration="0:0:0.15"/>
                                        <ColorAnimation Storyboard.TargetName="GripBar3" Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)" To="#B0B0B0" Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>



</ResourceDictionary>