<Page x:Class="ServiceCenterApp.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ServiceCenterApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="AuthPage"
      PreviewKeyDown="Page_PreviewKeyDown">

    <Border>
        <Border Background="{StaticResource WhiteBrush}" 
                CornerRadius="10" 
                Padding="20"
                MaxHeight="620" MaxWidth="440" Margin="10">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" Color="Black" Opacity="0.2" BlurRadius="15"/>
            </Border.Effect>

            <DockPanel>
                <StackPanel DockPanel.Dock="Top">
                    <TextBlock Grid.Row="0"
                           Text="Введите ПИН для доступа к системе"   
                           Foreground="{StaticResource DarkTextBrush}"
                           FontSize="32"
                           Margin="20,10,20,0"
                           FontFamily="{StaticResource Roboto}" 
                           TextWrapping="Wrap" 
                           TextAlignment="Center"/>

                    <TextBox Grid.Row="1"
                         Margin="60,20,60,0"
                         MinHeight="26"
                         BorderThickness="2"
                         FontFamily="{StaticResource Roboto}"
                         FontSize="40"
                         VerticalContentAlignment="Center"
                         Foreground="{StaticResource DarkTextBrush}"
                         HorizontalContentAlignment="Center"
                         Text="{Binding Path=StarPassword, Mode=OneWay}"
                         IsReadOnly="True"
                         BorderBrush="{StaticResource DarkTextBrush}"/>

                </StackPanel>

                <StackPanel Margin="0 6 0 0" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Style="{StaticResource AuthButton}" Content="1" Grid.Column="0" Grid.Row="0" Click="Button_Click" Tag="1" />
                        <Button Style="{StaticResource AuthButton}" Content="2" Grid.Column="1" Grid.Row="0" Click="Button_Click" Tag="2"/>
                        <Button Style="{StaticResource AuthButton}" Content="3" Grid.Column="2" Grid.Row="0" Click="Button_Click" Tag="3"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Style="{StaticResource AuthButton}" Content="4" Grid.Column="0" Grid.Row="1" Click="Button_Click" Tag="4"/>
                        <Button Style="{StaticResource AuthButton}" Content="5" Grid.Column="1" Grid.Row="1" Click="Button_Click" Tag="5"/>
                        <Button Style="{StaticResource AuthButton}" Content="6" Grid.Column="2" Grid.Row="1" Click="Button_Click" Tag="6"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Style="{StaticResource AuthButton}" Content="7" Grid.Column="0" Grid.Row="2" Click="Button_Click" Tag="7"/>
                        <Button Style="{StaticResource AuthButton}" Content="8" Grid.Column="1" Grid.Row="2" Click="Button_Click" Tag="8"/>
                        <Button Style="{StaticResource AuthButton}" Content="9" Grid.Column="2" Grid.Row="2" Click="Button_Click" Tag="9"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Style="{StaticResource AuthButton}" Grid.Column="0" Grid.Row="3" Click="Button_Click" Tag="Delete">
                            <Button.Content>
                                <Path Style="{StaticResource IconPathStyle}" Data="{StaticResource BackspaceIcon}"/>
                            </Button.Content>
                        </Button>
                        <Button Style="{StaticResource AuthButton}" Content="0" Grid.Column="1" Grid.Row="3" Click="Button_Click" Tag="0"/>
                        <Button Style="{StaticResource AuthButton}" Grid.Column="2" Grid.Row="3" Click="Button_Click" Tag="Apply">
                            <Button.Content>
                                <Path Style="{StaticResource IconPathStyle}" Data="{StaticResource ApplyIcon}"/>
                            </Button.Content>
                        </Button>
                    </StackPanel>

                </StackPanel>

            </DockPanel>
        </Border>
    </Border>
</Page>