<Page x:Class="ServiceCenterApp.Pages.EmployeesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ServiceCenterApp.Pages"
      xmlns:controls="clr-namespace:ServiceCenterApp.Controls"
      xmlns:converters="clr-namespace:ServiceCenterApp.Converters"
      xmlns:helpers="clr-namespace:ServiceCenterApp.Helpers"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1600"
      Title="Персонал">

    <Page.Resources>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:ObjectToGridLengthConverter x:Key="ObjectToGridLengthConverter"/>
        <converters:IsNotNullConverter x:Key="IsNotNullConverter"/>
    </Page.Resources>

    <Grid x:Name="LayoutRoot">
        <Grid.Style>
            <Style TargetType="Grid">
                <Setter Property="Tag" Value="820"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding SelectedEmployeeDetails, Converter={StaticResource IsNotNullConverter}}" Value="True">
                        <DataTrigger.EnterActions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Tag">
                                        <DiscreteObjectKeyFrame KeyTime="0" Value="460"/>
                                    </ObjectAnimationUsingKeyFrames>
                                </Storyboard>
                            </BeginStoryboard>
                        </DataTrigger.EnterActions>
                        <DataTrigger.ExitActions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Tag">
                                        <DiscreteObjectKeyFrame KeyTime="0" Value="820"/>
                                    </ObjectAnimationUsingKeyFrames>
                                </Storyboard>
                            </BeginStoryboard>
                        </DataTrigger.ExitActions>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Grid.Style>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding ElementName=LayoutRoot, Path=Tag, Mode=OneWay, Converter={StaticResource ObjectToGridLengthConverter}}" MinWidth="460" MaxWidth="840"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ЛЕВАЯ КОЛОНКА: СПИСОК -->
        <Border Grid.Column="0" Background="{StaticResource LightBackgroundBrush}" Padding="10">
            <DockPanel>
                <Border DockPanel.Dock="Top" Background="White" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                    <DockPanel>
                        <Button Content="+ Сотрудник" Command="{Binding AddEmployeeCommand}" DockPanel.Dock="Right" Style="{StaticResource AccentButtonStyle}"/>
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource SearchTextBoxStyle}" Margin="0,0,10,0"/>
                    </DockPanel>
                </Border>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding FilteredEmployees}" HorizontalAlignment="Center">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <controls:EmployeeCard/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </DockPanel>
        </Border>

        <GridSplitter Grid.Column="1" Style="{StaticResource ModernGridSplitterStyle}" Visibility="{Binding SelectedEmployeeDetails, Converter={StaticResource NullToVisibilityConverter}}"/>

        <!-- ПРАВАЯ КОЛОНКА: ДЕТАЛИ -->
        <ContentControl Grid.Column="2" Content="{Binding SelectedEmployeeDetails}">
            <ContentControl.Style>
                <Style TargetType="ContentControl">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding SelectedEmployeeDetails}" Value="{x:Null}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate>
                                        <Grid Background="#F0F2F5">
                                            <TextBlock Text="Выберите сотрудника из списка" FontSize="16" Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>

            <ContentControl.ContentTemplate>
                <DataTemplate>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">
                            <!-- Заголовок и кнопки -->
                            <DockPanel Margin="0,0,0,20">
                                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                                    <TextBlock Text="{Binding SurName}" FontSize="28" FontWeight="Bold" Foreground="{StaticResource DarkBackgroundBrush}"/>
                                    <TextBlock Text="{Binding FirstName}" FontSize="28" FontWeight="Bold" Foreground="{StaticResource DarkBackgroundBrush}" Margin="10,0,0,0"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="Назад" Command="{Binding DataContext.CloseDetailsCommand, RelativeSource={RelativeSource AncestorType=Page}}" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,10,0"/>
                                    <Button Content="Сохранить" Command="{Binding DataContext.SaveChangesCommand, RelativeSource={RelativeSource AncestorType=Page}}" Style="{StaticResource AccentButtonStyle}"/>
                                </StackPanel>
                            </DockPanel>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- ЛЕВАЯ: ЛИЧНЫЕ ДАННЫЕ -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="ЛИЧНЫЕ ДАННЫЕ" Style="{StaticResource SectionHeaderStyle}"/>
                                    <Border Style="{StaticResource InfoBorderStyle}">
                                        <StackPanel>
                                            <TextBlock Text="Фамилия"/>
                                            <TextBox Text="{Binding SurName}" helpers:MaxLengthHelper.Attach="True" Style="{StaticResource EditableTextBoxStyle}"/>
                                            <TextBlock Text="Имя"/>
                                            <TextBox Text="{Binding FirstName}" helpers:MaxLengthHelper.Attach="True" Style="{StaticResource EditableTextBoxStyle}"/>
                                            <TextBlock Text="Отчество"/>
                                            <TextBox Text="{Binding Patronymic}" helpers:MaxLengthHelper.Attach="True" Style="{StaticResource EditableTextBoxStyle}"/>
                                            <TextBlock Text="Контакты"/>
                                            <TextBox Text="{Binding ContactInfo}" helpers:MaxLengthHelper.Attach="True" Style="{StaticResource EditableTextBoxStyle}"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <!-- ПРАВАЯ: ДОСТУП И СТАТИСТИКА -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="НАСТРОЙКИ ДОСТУПА" Style="{StaticResource SectionHeaderStyle}"/>
                                    <Border Style="{StaticResource InfoBorderStyle}">
                                        <StackPanel>
                                            <TextBlock Text="Должность" Margin="0,0,0,5"/>
                                            <Grid Margin="0,0,0,15">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <ComboBox Grid.Column="0"
                                                          ItemsSource="{Binding DataContext.AllPositions, RelativeSource={RelativeSource AncestorType=Page}}" 
                                                          SelectedItem="{Binding DataContext.SelectedPosition, RelativeSource={RelativeSource AncestorType=Page}}"
                                                          Style="{StaticResource PageComboBoxStyle}" 
                                                          ItemTemplate="{StaticResource PositionComboBoxItemTemplate}"/>
                                                <Button Grid.Column="1" 
                                                        Content="+" 
                                                        Width="30" Height="30"
                                                        Margin="5,0,0,0"
                                                        Style="{StaticResource SecondaryButtonStyle}"
                                                        Command="{Binding DataContext.AddPositionCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                        ToolTip="Добавить новую должность"/>
                                            </Grid>

                                            <TextBlock Text="Роль" Margin="0,0,0,5"/>
                                            <ComboBox ItemsSource="{Binding DataContext.AllRoles, RelativeSource={RelativeSource AncestorType=Page}}" 
                                                      SelectedItem="{Binding DataContext.SelectedRole, RelativeSource={RelativeSource AncestorType=Page}}"
                                                      Style="{StaticResource PageComboBoxStyle}" 
                                                      ItemTemplate="{StaticResource RoleComboBoxItemTemplate}" 
                                                      Margin="0,0,0,0"/>
                                        </StackPanel>
                                    </Border>

                                    <TextBlock Text="СТАТИСТИКА" Style="{StaticResource SectionHeaderStyle}" Margin="0,15,0,5"/>
                                    <Border Style="{StaticResource InfoBorderStyle}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Выполнено заказов: " FontSize="14"/>
                                            <TextBlock Text="{Binding DataContext.CompletedOrdersCount, RelativeSource={RelativeSource AncestorType=Page}}" FontSize="14" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </DataTemplate>
            </ContentControl.ContentTemplate>
        </ContentControl>
    </Grid>
</Page>