<Page x:Class="ServiceCenterApp.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="Личный кабинет">

    <Grid Margin="40">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <!-- Левая часть: Инфо -->
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="Auto"/>
            <!-- Правая часть: Смена PIN -->
        </Grid.ColumnDefinitions>

        <!-- ИНФОРМАЦИЯ -->
        <StackPanel Grid.Column="0" Width="400">
            <TextBlock Text="Мой профиль" FontSize="32" FontWeight="Bold" Foreground="{StaticResource DarkBackgroundBrush}" Margin="0,0,0,30"/>

            <Border Background="White" Padding="20" CornerRadius="10">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="10" Opacity="0.1"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Сотрудник" Foreground="Gray" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding FullName}" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,15"/>

                    <TextBlock Text="Должность" Foreground="Gray" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding Position}" FontSize="16" Margin="0,0,0,15"/>

                    <TextBlock Text="Роль доступа" Foreground="Gray" Margin="0,0,0,5"/>
                    <Border Background="{StaticResource PrimaryBrushLight}" HorizontalAlignment="Left" CornerRadius="5" Padding="10,5">
                        <TextBlock Text="{Binding Role}" Foreground="White" FontWeight="Bold"/>
                    </Border>

                    <TextBlock Text="Контакты" Foreground="Gray" Margin="0,15,0,5"/>
                    <TextBlock Text="{Binding ContactInfo}" FontSize="16"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- СМЕНА ПАРОЛЯ -->
        <StackPanel Grid.Column="2" Width="350">
            <TextBlock Text="Безопасность" FontSize="24" FontWeight="Bold" Foreground="{StaticResource DarkBackgroundBrush}" Margin="0,8,0,30"/>

            <Border Background="White" Padding="20" CornerRadius="10">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="10" Opacity="0.1"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Смена PIN-кода" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15"/>

                    <TextBlock Text="Старый PIN *" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding OldPin, UpdateSourceTrigger=PropertyChanged}" MaxLength="10" Style="{StaticResource EditableTextBoxStyle}"/>

                    <TextBlock Text="Новый PIN *" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding NewPin, UpdateSourceTrigger=PropertyChanged}" MaxLength="10" Style="{StaticResource EditableTextBoxStyle}"/>

                    <Button Content="Сменить PIN" 
                            Command="{Binding ChangePinCommand}" 
                            Style="{StaticResource AccentButtonStyle}" 
                            Margin="0,15,0,0" HorizontalAlignment="Right"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>