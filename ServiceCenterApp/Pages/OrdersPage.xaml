<Page x:Class="ServiceCenterApp.Pages.OrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ServiceCenterApp.Pages"
      xmlns:controls="clr-namespace:ServiceCenterApp.Controls"
      xmlns:helpers="clr-namespace:ServiceCenterApp.Helpers"
      xmlns:converters="clr-namespace:ServiceCenterApp.Converters"
      mc:Ignorable="d" 
      Language="be-BY"
      d:DesignHeight="900" d:DesignWidth="1600"
      Title="OrdersPage">

    <Page.Resources>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:ObjectToGridLengthConverter x:Key="ObjectToGridLengthConverter"/>
        <converters:IsNotNullConverter x:Key="IsNotNullConverter"/>

        <Style x:Key="KpiTitleStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Стиль для вкладок -->
        <Style TargetType="TabItem">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" BorderBrush="Transparent" BorderThickness="0,0,0,2" Padding="{TemplateBinding Padding}" Background="Transparent">
                            <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Header" Margin="0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter Property="Foreground" Value="Gray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding RelativeSource={RelativeSource Self}, Path=Tag, Converter={StaticResource ObjectToGridLengthConverter}}" MinWidth="410" MaxWidth="840">
                <ColumnDefinition.Style>
                    <Style TargetType="ColumnDefinition">
                        <Setter Property="Tag" Value="820"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedOrderDetails, Converter={StaticResource IsNotNullConverter}}" Value="True">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Tag">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="410"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                                <DataTrigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Tag">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="820"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.ExitActions>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ColumnDefinition.Style>
            </ColumnDefinition>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ЛЕВАЯ КОЛОНКА: СПИСОК ЗАКАЗОВ -->
        <Border Grid.Column="0" Background="{StaticResource LightBackgroundBrush}" Padding="10">
            <DockPanel>
                <Border DockPanel.Dock="Top" Background="White" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Фильтр по статусам:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ItemsControl ItemsSource="{Binding StatusFilters}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding StatusName}" IsChecked="{Binding IsChecked}" Margin="0,0,15,5" VerticalAlignment="Center"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <Separator Margin="0,10"/>
                        <DockPanel>
                            <Button Content="+ Новый заказ" 
                                    DockPanel.Dock="Right" 
                                    VerticalAlignment="Center" 
                                    Style="{StaticResource AccentButtonStyle}"
                                    Command="{Binding CreateOrderCommand}"/>
                            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,10,0" Style="{StaticResource EditableTextBoxStyle}"/>
                        </DockPanel>
                    </StackPanel>
                </Border>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding FilteredOrders}" HorizontalAlignment="Center">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <controls:OrderCard/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemContainerStyle>
                            <Style TargetType="ContentPresenter">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect ShadowDepth="0" BlurRadius="15" Color="{StaticResource PrimaryColor}" Opacity="0.8"/>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ItemsControl.ItemContainerStyle>
                    </ItemsControl>
                </ScrollViewer>
            </DockPanel>
        </Border>

        <GridSplitter Grid.Column="1" Style="{StaticResource ModernGridSplitterStyle}"/>

        <!-- ПРАВАЯ КОЛОНКА: ДЕТАЛИ ЗАКАЗА -->
        <ContentControl Grid.Column="2" Content="{Binding SelectedOrderDetails}">
            <ContentControl.Style>
                <Style TargetType="ContentControl">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding SelectedOrderDetails}" Value="{x:Null}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate>
                                        <Grid Background="#F0F2F5">
                                            <TextBlock Text="Выберите заказ из списка для просмотра деталей" FontSize="16" Foreground="Gray" HorizontalAlignment="Center" TextWrapping="Wrap" Margin="10 0 10 0" VerticalAlignment="Center"/>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>

            <ContentControl.ContentTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- HEADER -->
                        <DockPanel Grid.Row="0" Margin="20,20,20,10">
                            <TextBlock FontSize="28" FontWeight="Bold" Foreground="{StaticResource DarkBackgroundBrush}" VerticalAlignment="Center" DockPanel.Dock="Left">
                                <Run Text="Заявка №"/>
                                <Run Text="{Binding OrderId}"/>
                            </TextBlock>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right" MaxHeight="40">
                                <!-- КНОПКА ПЕЧАТИ -->
                                <Button Content="Печать" 
                                        Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,10,0" Width="100"
                                        Command="{Binding DataContext.PrintReceiptCommand, RelativeSource={RelativeSource AncestorType=Page}}"/>

                                <Button Content="Назад" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,10,0" Width="100"
                                        Command="{Binding DataContext.CloseDetailsCommand, RelativeSource={RelativeSource AncestorType=Page}}"/>
                                <Button Content="Сохранить" 
                                        Style="{StaticResource AccentButtonStyle}"
                                        Command="{Binding DataContext.SaveChangesCommand, RelativeSource={RelativeSource AncestorType=Page}}"/>
                            </StackPanel>
                        </DockPanel>

                        <!-- TABS -->
                        <TabControl Grid.Row="2" Margin="20,0,20,20" BorderThickness="0" Background="Transparent">

                            <TabItem Header="Документы">
                                <Grid Margin="0,10,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Панель действий -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                        <Button Content="Сформировать Акт приема" 
                                                Command="{Binding DataContext.GenerateReceptionActCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                Style="{StaticResource SecondaryButtonStyle}"
                                                Margin="0,0,10,0"/>

                                        <!-- В будущем можно добавить кнопку "Акт выполненных работ" -->
                                        <Button Content="Акт выполненных работ" 
                                                IsEnabled="False" 
                                                ToolTip="Функционал в разработке"
                                                Style="{StaticResource SecondaryButtonStyle}"/>
                                    </StackPanel>

                                    <!-- Список документов -->
                                    <DataGrid Grid.Row="1"
                                              ItemsSource="{Binding DataContext.OrderDocuments, RelativeSource={RelativeSource AncestorType=Page}}"
                                              Style="{StaticResource ModernDataGridStyle}"
                                              ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeaderStyle}"
                                              RowStyle="{StaticResource ModernDataGridRowStyle}"
                                              CellStyle="{StaticResource ModernDataGridCellStyle}"
                                              IsReadOnly="True"
                                              AutoGenerateColumns="False">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Дата" Binding="{Binding CreationDate, StringFormat='dd.MM.yyyy HH:mm'}" Width="140"/>
                                            <DataGridTextColumn Header="Тип документа" Binding="{Binding DocumentType.TypeName}" Width="*"/>
                                            <DataGridTextColumn Header="Сотрудник" Binding="{Binding Employee.SurName}" Width="150"/>

                                            <!-- Кнопка Открыть -->
                                            <DataGridTemplateColumn Width="100">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Button Content="Открыть" 
                                                                FontSize="11"
                                                                Padding="5,2"
                                                                Style="{StaticResource SecondaryButtonStyle}"
                                                                Command="{Binding DataContext.OpenDocumentCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                                CommandParameter="{Binding FilePath}"/>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Grid>
                            </TabItem>

                            <!-- ВКЛАДКА: ИНФОРМАЦИЯ -->
                            <TabItem Header="Информация о заказе">
                                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="0,10,0,0">
                                    <StackPanel>
                                        <WrapPanel x:Name="RightWrapPanel" Orientation="Horizontal" HorizontalAlignment="Center">
                                            <!-- БЛОК 1: УСТРОЙСТВО И ДЕТАЛИ -->
                                            <StackPanel Width="360" Margin="0,0,20,20">
                                                <TextBlock Text="ИНФОРМАЦИЯ ОБ УСТРОЙСТВЕ" Style="{StaticResource SectionHeaderStyle}"/>
                                                <Border Style="{StaticResource InfoBorderStyle}">
                                                    <StackPanel>
                                                        <TextBlock Text="Тип устройства"/>
                                                        <TextBox Text="{Binding Device.DeviceType}" helpers:MaxLengthHelper.Attach="True" Style="{StaticResource EditableTextBoxStyle}"/>
                                                        <TextBlock Text="Бренд"/>
                                                        <TextBox Text="{Binding Device.Brand}" helpers:MaxLengthHelper.Attach="True" Style="{StaticResource EditableTextBoxStyle}"/>
                                                        <TextBlock Text="Модель"/>
                                                        <TextBox Text="{Binding Device.Model}" helpers:MaxLengthHelper.Attach="True" Style="{StaticResource EditableTextBoxStyle}"/>
                                                        <TextBlock Text="Серийный номер"/>
                                                        <TextBox Text="{Binding Device.SerialNumber}" helpers:MaxLengthHelper.Attach="True" Style="{StaticResource EditableTextBoxStyle}"/>
                                                    </StackPanel>
                                                </Border>

                                                <TextBlock Text="ДЕТАЛИ ЗАКАЗА" Style="{StaticResource SectionHeaderStyle}"/>
                                                <Border Style="{StaticResource InfoBorderStyle}">
                                                    <StackPanel>
                                                        <TextBlock Text="Описание неисправности"/>
                                                        <TextBox Text="{Binding ProblemDescription}" helpers:MaxLengthHelper.Attach="True" TextWrapping="Wrap" MinHeight="80" Style="{StaticResource EditableTextBoxStyle}"/>
                                                        <TextBlock Text="Комментарий мастера"/>
                                                        <TextBox Text="{Binding Comment}" helpers:MaxLengthHelper.Attach="True" TextWrapping="Wrap" MinHeight="60" Style="{StaticResource EditableTextBoxStyle}"/>
                                                    </StackPanel>
                                                </Border>
                                            </StackPanel>

                                            <!-- БЛОК 2: КЛИЕНТ -->
                                            <StackPanel Width="360" Margin="0,0,20,20">
                                                <TextBlock Text="ИНФОРМАЦИЯ О КЛИЕНТЕ" Style="{StaticResource SectionHeaderStyle}"/>
                                                <Border Style="{StaticResource InfoBorderStyle}">
                                                    <StackPanel>
                                                        <TextBlock Text="Фамилия"/>
                                                        <TextBox Text="{Binding Client.SurName}" helpers:MaxLengthHelper.Attach="True" Style="{StaticResource EditableTextBoxStyle}"/>
                                                        <TextBlock Text="Имя"/>
                                                        <TextBox Text="{Binding Client.FirstName}" helpers:MaxLengthHelper.Attach="True" Style="{StaticResource EditableTextBoxStyle}"/>
                                                        <TextBlock Text="Отчество"/>
                                                        <TextBox Text="{Binding Client.Patronymic}" helpers:MaxLengthHelper.Attach="True" Style="{StaticResource EditableTextBoxStyle}"/>
                                                        <TextBlock Text="Телефон"/>
                                                        <TextBox Text="{Binding Client.PhoneNumber}" helpers:MaxLengthHelper.Attach="True" Style="{StaticResource EditableTextBoxStyle}"/>
                                                        <TextBlock Text="Email"/>
                                                        <TextBox Text="{Binding Client.Email}" helpers:MaxLengthHelper.Attach="True" Style="{StaticResource EditableTextBoxStyle}"/>
                                                        <TextBlock Text="Комментарий клиента"/>
                                                        <TextBox Text="{Binding Client.Comment}" MaxLength="1000" TextWrapping="Wrap" MinHeight="60" Style="{StaticResource EditableTextBoxStyle}"/>
                                                    </StackPanel>
                                                </Border>
                                            </StackPanel>

                                            <!-- БЛОК 3: КЛЮЧЕВАЯ ИНФОРМАЦИЯ -->
                                            <StackPanel Width="360" Margin="0,0,20,20">
                                                <TextBlock Text="КЛЮЧЕВАЯ ИНФОРМАЦИЯ" Style="{StaticResource SectionHeaderStyle}"/>
                                                <Border Style="{StaticResource InfoBorderStyle}">
                                                    <StackPanel>
                                                        <DockPanel Margin="0,0,0,5">
                                                            <TextBlock Text="Статус заказа:" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0" Width="160"/>
                                                            <ComboBox ItemsSource="{Binding DataContext.AllOrderStatuses, RelativeSource={RelativeSource AncestorType=Page}}" 
                                                SelectedItem="{Binding DataContext.SelectedOrderStatus, RelativeSource={RelativeSource AncestorType=Page}, Mode=TwoWay}"
                                                Style="{StaticResource PageComboBoxStyle}" ItemContainerStyle="{StaticResource ColorStatusComboBoxItemContainerStyle}"
                                                ItemTemplate="{StaticResource ColorStatusComboBoxItemTemplate}"/>
                                                        </DockPanel>
                                                        <DockPanel Margin="0,0,0,5">
                                                            <TextBlock Text="Исполнитель:" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0" Width="160"/>
                                                            <ComboBox ItemsSource="{Binding DataContext.AllEmployees, RelativeSource={RelativeSource AncestorType=Page}}" 
                                                SelectedItem="{Binding DataContext.SelectedAcceptorEmployee, RelativeSource={RelativeSource AncestorType=Page}, Mode=TwoWay}"
                                                Style="{StaticResource PageComboBoxStyle}" ItemTemplate="{StaticResource EmployeeComboBoxItemTemplate}"/>
                                                        </DockPanel>
                                                        <DockPanel Margin="0,0,0,5">
                                                            <TextBlock Text="Приоритет:" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0" Width="160"/>
                                                            <ComboBox ItemsSource="{Binding DataContext.AllPriorities, RelativeSource={RelativeSource AncestorType=Page}}" 
                                                SelectedItem="{Binding DataContext.SelectedPriority, RelativeSource={RelativeSource AncestorType=Page}, Mode=TwoWay}"
                                                Style="{StaticResource PageComboBoxStyle}" ItemTemplate="{StaticResource PriorityComboBoxItemTemplate}"/>
                                                        </DockPanel>
                                                        <Separator Margin="0,10"/>
                                                        <DockPanel>
                                                            <TextBlock Text="Создал заказ:" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0" Width="160"/>
                                                            <TextBlock VerticalAlignment="Center" FontSize="14" FontWeight="SemiBold">
                                        <Run Text="{Binding CreatorEmployee.SurName}"/>
                                        <Run Text="{Binding CreatorEmployee.FirstName, StringFormat=' {0}'}"/>
                                                            </TextBlock>
                                                        </DockPanel>
                                                    </StackPanel>
                                                </Border>
                                            </StackPanel>
                                        </WrapPanel>

                                        <!-- БЛОК 4: ЗАПЧАСТИ -->
                                        <StackPanel Margin="0,0,20,20" Width="{Binding ElementName=RightWrapPanel, Path=ActualWidth}">
                                            <TextBlock Text="ИСПОЛЬЗУЕМЫЕ ЗАПЧАСТИ" Style="{StaticResource SectionHeaderStyle}"/>
                                            <Border Style="{StaticResource InfoBorderStyle}">
                                                <StackPanel>
                                                    <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="10,5">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="2*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="2*"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="30"/>
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock Grid.Column="0" Text="Название" Style="{StaticResource KpiTitleStyle}"/>
                                                            <TextBlock Grid.Column="1" Text="Остаток" Style="{StaticResource KpiTitleStyle}" Margin="10,0"/>
                                                            <TextBlock Grid.Column="2" Text="Количество" Style="{StaticResource KpiTitleStyle}" HorizontalAlignment="Center"/>
                                                            <TextBlock Grid.Column="3" Text="Цена" Style="{StaticResource KpiTitleStyle}" HorizontalAlignment="Right" Margin="10,0"/>
                                                            <TextBlock Grid.Column="4" Text="Сумма" Style="{StaticResource KpiTitleStyle}" Margin="0 0 20 0" HorizontalAlignment="Right"/>
                                                        </Grid>
                                                    </Border>
                                                    <ItemsControl ItemsSource="{Binding DataContext.UsedSpareParts, RelativeSource={RelativeSource AncestorType=Page}}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <controls:UsedSparePartControl/>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                    <Separator Margin="0,10"/>
                                                    <DockPanel>
                                                        <TextBlock Text="Общая сумма по запчастям:" FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>
                                                        <TextBlock Text="{Binding DataContext.SparePartsTotalSum, RelativeSource={RelativeSource AncestorType=Page}, StringFormat={}{0:C0}}"
                                                       FontSize="16" FontWeight="Bold" HorizontalAlignment="Right"
                                                       Foreground="{StaticResource PrimaryBrush}"/>
                                                    </DockPanel>
                                                    <Button Content="+ Добавить запчасть" 
                                                MinHeight="30"
                                                Style="{StaticResource SecondaryButtonStyle}" 
                                                HorizontalAlignment="Right" 
                                                Margin="0,10,0,0" 
                                                MinWidth="160"
                                                Command="{Binding DataContext.AddSparePartCommand, RelativeSource={RelativeSource AncestorType=Page}}"/>
                                                </StackPanel>
                                            </Border>
                                            
                                            
                                        </StackPanel>

                                        <!-- БЛОК 5: ВЫПОЛНЕННЫЕ РАБОТЫ -->
                                        <StackPanel Margin="0,0,20,20" Width="{Binding ElementName=RightWrapPanel, Path=ActualWidth}">
                                            <TextBlock Text="ВЫПОЛНЕННЫЕ РАБОТЫ И УСЛУГИ" Style="{StaticResource SectionHeaderStyle}"/>
                                            <Border Style="{StaticResource InfoBorderStyle}">
                                                <StackPanel>
                                                    <!-- Шапка таблицы (Как у запчастей) -->
                                                    <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="10,5">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="2*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="2*"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="30"/>
                                                                <!-- Место под крестик -->
                                                            </Grid.ColumnDefinitions>

                                                            <TextBlock Grid.Column="0" Text="Наименование услуги" Style="{StaticResource KpiTitleStyle}"/>
                                                            <!-- Колонка 1 пропущена (Остаток) -->
                                                            <TextBlock Grid.Column="3" Text="Цена" Style="{StaticResource KpiTitleStyle}" HorizontalAlignment="Right" Margin="10,0"/>
                                                            <TextBlock Grid.Column="4" Text="Сумма" Style="{StaticResource KpiTitleStyle}" HorizontalAlignment="Right"/>
                                                        </Grid>
                                                    </Border>

                                                    <ItemsControl ItemsSource="{Binding DataContext.UsedServices, RelativeSource={RelativeSource AncestorType=Page}}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <controls:UsedServiceControl/>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>

                                                    <Separator Margin="0,10"/>

                                                    <DockPanel>
                                                        <TextBlock Text="Общая сумма по работам:" FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>
                                                        <TextBlock Text="{Binding DataContext.ServicesTotalSum, RelativeSource={RelativeSource AncestorType=Page}, StringFormat={}{0:C2}}"
                                                                   FontSize="16" FontWeight="Bold" HorizontalAlignment="Right"
                                                                   Foreground="{StaticResource PrimaryBrush}"/>
                                                    </DockPanel>

                                                    <Button Content="+ Добавить работу" 
                                                            MinHeight="30"
                                                            Style="{StaticResource SecondaryButtonStyle}" 
                                                            HorizontalAlignment="Right" 
                                                            Margin="0,10,0,0" 
                                                            MinWidth="160"
                                                            Command="{Binding DataContext.AddServiceCommand, RelativeSource={RelativeSource AncestorType=Page}}"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- ИТОГОВАЯ СУММА ВСЕГО ЗАКАЗА -->
                                            <Border Background="{StaticResource PrimaryBrush}" CornerRadius="5" Padding="15" Margin="0,20,0,0">
                                                <Border.Effect>
                                                    <DropShadowEffect ShadowDepth="2" BlurRadius="10" Opacity="0.3"/>
                                                </Border.Effect>
                                                <DockPanel>
                                                    <TextBlock Text="ИТОГО К ОПЛАТЕ:" Foreground="White" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                        <TextBlock Text="{Binding DataContext.GrandTotalSum, RelativeSource={RelativeSource AncestorType=Page}, StringFormat={}{0:C2}}" 
                                                                   Foreground="White" FontSize="24" FontWeight="Bold"/>
                                                    </StackPanel>
                                                </DockPanel>
                                            </Border>
                                        </StackPanel>

                                    </StackPanel>
                                </ScrollViewer>
                            </TabItem>

                            <TabItem Header="История статусов">
                                <Grid Margin="0,10,0,0" MaxWidth="820">
                                    <DataGrid ItemsSource="{Binding DataContext.StatusHistory, RelativeSource={RelativeSource AncestorType=Page}}"
                                              Style="{StaticResource ModernDataGridStyle}"
                                              ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeaderStyle}"
                                              RowStyle="{StaticResource ModernDataGridRowStyle}"
                                              CellStyle="{StaticResource ModernDataGridCellStyle}"
                                              IsReadOnly="True"
                                              AutoGenerateColumns="False">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Дата и Время" Binding="{Binding ChangeDate, StringFormat='dd.MM.yyyy HH:mm'}" Width="150"/>
                                            <DataGridTextColumn Header="Старый статус" Binding="{Binding OldStatus.StatusName}" Width="*"/>
                                            <DataGridTextColumn Header="Новый статус" Binding="{Binding NewStatus.StatusName}" Width="*" FontWeight="Bold"/>
                                            <DataGridTextColumn Header="Сотрудник" Binding="{Binding Employee.SurName}" Width="150"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Grid>
                            </TabItem>

                        </TabControl>
                    </Grid>
                </DataTemplate>
            </ContentControl.ContentTemplate>
        </ContentControl>
    </Grid>
</Page>