<Page x:Class="ServiceCenterApp.Pages.ClientsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ServiceCenterApp.Pages"
      xmlns:controls="clr-namespace:ServiceCenterApp.Controls"
      xmlns:converters="clr-namespace:ServiceCenterApp.Converters"
      xmlns:helpers="clr-namespace:ServiceCenterApp.Helpers"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1600"
      Title="ClientsPage">

    <Page.Resources>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:ObjectToGridLengthConverter x:Key="ObjectToGridLengthConverter"/>
        <converters:IsNotNullConverter x:Key="IsNotNullConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding RelativeSource={RelativeSource Self}, Path=Tag, Converter={StaticResource ObjectToGridLengthConverter}}" MinWidth="460" MaxWidth="880">
                <ColumnDefinition.Style>
                    <Style TargetType="ColumnDefinition">
                        <Setter Property="Tag" Value="880"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedClientDetails, Converter={StaticResource IsNotNullConverter}}" Value="True">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Tag">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="460"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                                <DataTrigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Tag">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="880"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.ExitActions>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ColumnDefinition.Style>
            </ColumnDefinition>

            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="{StaticResource LightBackgroundBrush}" Padding="10">
            <DockPanel>
                <Border DockPanel.Dock="Top" Background="White" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                    <DockPanel>
                        <Button Content="+ Новый клиент" Command="{Binding AddClientCommand}" DockPanel.Dock="Right" Style="{StaticResource AccentButtonStyle}"/>
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource SearchTextBoxStyle}" Margin="0,0,10,0"/>
                    </DockPanel>
                </Border>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <WrapPanel HorizontalAlignment="Center">
                        <ItemsControl ItemsSource="{Binding FilteredClients}" HorizontalAlignment="Center">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <controls:ClientCard/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </WrapPanel>
                </ScrollViewer>
            </DockPanel>
        </Border>

        <GridSplitter Grid.Column="1" Style="{StaticResource ModernGridSplitterStyle}" Visibility="{Binding SelectedClientDetails, Converter={StaticResource NullToVisibilityConverter}}"/>

        <!-- ДЕТАЛИ КЛИЕНТА -->
        <ContentControl Grid.Column="2" Content="{Binding SelectedClientDetails}">
            <ContentControl.Style>
                <Style TargetType="ContentControl">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding SelectedClientDetails}" Value="{x:Null}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate>
                                        <Grid Background="#F0F2F5">
                                            <TextBlock Text="Выберите клиента из списка" FontSize="16" Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>

            <ContentControl.ContentTemplate>
                <DataTemplate>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">
                            <!-- Заголовок и кнопки -->
                            <DockPanel Margin="0,0,0,20">
                                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                                    <TextBlock Text="{Binding SurName}" FontSize="28" FontWeight="Bold" Foreground="{StaticResource DarkBackgroundBrush}"/>
                                    <TextBlock Text="{Binding FirstName}" FontSize="28" FontWeight="Bold" Foreground="{StaticResource DarkBackgroundBrush}" Margin="10,0,0,0"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="Назад" Command="{Binding DataContext.CloseDetailsCommand, RelativeSource={RelativeSource AncestorType=Page}}" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,10,0"/>
                                    <Button Content="Сохранить" Command="{Binding DataContext.SaveChangesCommand, RelativeSource={RelativeSource AncestorType=Page}}" Style="{StaticResource AccentButtonStyle}"/>
                                </StackPanel>
                            </DockPanel>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- ЛИЧНЫЕ ДАННЫЕ -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="ОСНОВНАЯ ИНФОРМАЦИЯ" Style="{StaticResource SectionHeaderStyle}"/>
                                    <Border Style="{StaticResource InfoBorderStyle}">
                                        <StackPanel>
                                            <TextBlock Text="Фамилия"/>
                                            <TextBox Text="{Binding SurName}" helpers:MaxLengthHelper.Attach="True" Style="{StaticResource EditableTextBoxStyle}"/>
                                            <TextBlock Text="Имя"/>
                                            <TextBox Text="{Binding FirstName}" helpers:MaxLengthHelper.Attach="True" Style="{StaticResource EditableTextBoxStyle}"/>
                                            <TextBlock Text="Отчество"/>
                                            <TextBox Text="{Binding Patronymic}" helpers:MaxLengthHelper.Attach="True" Style="{StaticResource EditableTextBoxStyle}"/>
                                            <TextBlock Text="Телефон"/>
                                            <TextBox Text="{Binding PhoneNumber}" helpers:MaxLengthHelper.Attach="True" Style="{StaticResource EditableTextBoxStyle}"/>
                                            <TextBlock Text="Email"/>
                                            <TextBox Text="{Binding Email}" helpers:MaxLengthHelper.Attach="True" Style="{StaticResource EditableTextBoxStyle}"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <!-- КОММЕНТАРИЙ -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="ДОПОЛНИТЕЛЬНО" Style="{StaticResource SectionHeaderStyle}"/>
                                    <Border Style="{StaticResource InfoBorderStyle}">
                                        <StackPanel>
                                            <TextBlock Text="Комментарий"/>
                                            <TextBox Text="{Binding Comment}" MaxLength="1000" TextWrapping="Wrap" MinHeight="100" Style="{StaticResource EditableTextBoxStyle}"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Grid>

                            <!-- ИСТОРИЯ ЗАКАЗОВ -->
                            <TextBlock Text="ИСТОРИЯ ЗАКАЗОВ" Style="{StaticResource SectionHeaderStyle}" Margin="0,20,0,8"/>
                            <Border Style="{StaticResource InfoBorderStyle}">
                                <DataGrid ItemsSource="{Binding DataContext.ClientOrdersHistory, RelativeSource={RelativeSource AncestorType=Page}}"
                                          Style="{StaticResource ModernDataGridStyle}"
                                          ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeaderStyle}"
                                          RowStyle="{StaticResource ModernDataGridRowStyle}"
                                          CellStyle="{StaticResource ModernDataGridCellStyle}"
                                          IsReadOnly="True" MaxHeight="300">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="№" Binding="{Binding OrderId}" Width="50"/>
                                        <DataGridTextColumn Header="Дата" Binding="{Binding RegistrationDate, StringFormat=dd.MM.yyyy}" Width="100"/>
                                        <DataGridTextColumn Header="Устройство" Binding="{Binding Device.Model}" Width="*"/>
                                        <DataGridTextColumn Header="Статус" Binding="{Binding Status.StatusName}" Width="150"/>
                                        <DataGridTextColumn Header="Проблема" Binding="{Binding ProblemDescription}" Width="1.5*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Border>

                        </StackPanel>
                    </ScrollViewer>
                </DataTemplate>
            </ContentControl.ContentTemplate>
        </ContentControl>
    </Grid>
</Page>