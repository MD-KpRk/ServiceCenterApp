<Page x:Class="ServiceCenterApp.Pages.StoragePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ServiceCenterApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="Склад">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <DockPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Склад запчастей" FontSize="28" FontWeight="Bold" Foreground="{StaticResource DarkBackgroundBrush}" VerticalAlignment="Center"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <!-- Поиск -->
                <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource SearchTextBoxStyle}" Width="300" Margin="0,0,20,0" VerticalAlignment="Center"/>
                
                <!-- Кнопки управления -->
                <Button Content="Редактировать" Command="{Binding EditPartCommand}" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,10,0"/>
                <Button Content="Удалить" Command="{Binding DeletePartCommand}" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,10,0" Foreground="IndianRed"/>
                <Button Content="+ Добавить деталь" Command="{Binding AddPartCommand}" Style="{StaticResource AccentButtonStyle}"/>
            </StackPanel>
        </DockPanel>

        <!-- Таблица (DataGrid) -->
        <!-- Мы используем RowStyle для подсветки малого остатка -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding FilteredParts}"
                  SelectedItem="{Binding SelectedPart}"
                  IsReadOnly="True"
                  Style="{StaticResource ModernDataGridStyle}"
                  ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeaderStyle}"
                  CellStyle="{StaticResource ModernDataGridCellStyle}">
            
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow" BasedOn="{StaticResource ModernDataGridRowStyle}">
                    <Style.Triggers>
                        <!-- ТРИГГЕР: Если остаток < 5, красим текст в красный (Внимание!) -->
                        <DataTrigger Binding="{Binding StockQuantity}" Value="0">
                            <Setter Property="Foreground" Value="Red"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </DataTrigger>
                        <!-- Можно добавить конвертер для диапазона, но для 0 так проще -->
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

            <!-- Двойной клик для редактирования -->
            <DataGrid.InputBindings>
                <MouseBinding MouseAction="LeftDoubleClick" Command="{Binding EditPartCommand}"/>
            </DataGrid.InputBindings>

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding PartId}" Width="50"/>
                <DataGridTextColumn Header="Артикул" Binding="{Binding PartNumber}" Width="120"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="2*"/>
                <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="2*"/>
                <DataGridTextColumn Header="Поставщик" Binding="{Binding Supplier.Name}" Width="1.5*"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding Price, StringFormat={}{0:C2}}" Width="100"/>
                <DataGridTextColumn Header="Остаток" Binding="{Binding StockQuantity}" Width="100" FontWeight="SemiBold"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>