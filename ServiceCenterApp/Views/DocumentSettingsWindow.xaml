<Window x:Class="ServiceCenterApp.Views.DocumentSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Параметры документа" Height="250" Width="400"
        WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="УСЛОВИЯ ГАРАНТИИ" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15" FontSize="16"/>

            <TextBlock Text="Выберите срок гарантии:" Margin="0,0,0,5"/>
            <ComboBox ItemsSource="{Binding WarrantyOptions}" 
                      SelectedValue="{Binding SelectedDays}" 
                      SelectedValuePath="Value" 
                      DisplayMemberPath="Key"
                      Style="{StaticResource PageComboBoxStyle}"/>

            <TextBlock Text="{Binding ValidUntilText}" 
                       Foreground="{StaticResource PrimaryBrush}" 
                       FontWeight="SemiBold" 
                       HorizontalAlignment="Right" 
                       Margin="0,5,0,0"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Отмена" IsCancel="True" Style="{StaticResource SecondaryButtonStyle}" Width="100" Margin="0,0,10,0"/>
                <Button Content="Сформировать Акт" IsDefault="True" Command="{Binding ConfirmCommand}" Style="{StaticResource AccentButtonStyle}" Width="150"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>