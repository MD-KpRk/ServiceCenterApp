<Window x:Class="ServiceCenterApp.Views.AddEditSparePartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:helpers="clr-namespace:ServiceCenterApp.Helpers"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Height="600" Width="500"
        WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding WindowTitle}" FontSize="24" FontWeight="Bold" Foreground="{StaticResource DarkBackgroundBrush}" Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="ОСНОВНАЯ ИНФОРМАЦИЯ" Style="{StaticResource SectionHeaderStyle}"/>
                <Border Style="{StaticResource InfoBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="Название детали *"/>
                        <TextBox Text="{Binding Name}" helpers:MaxLengthHelper.Attach="True" Style="{StaticResource EditableTextBoxStyle}"/>

                        <TextBlock Text="Артикул / Part Number *"/>
                        <TextBox Text="{Binding PartNumber}" helpers:MaxLengthHelper.Attach="True" Style="{StaticResource EditableTextBoxStyle}"/>

                        <TextBlock Text="Описание"/>
                        <TextBox Text="{Binding Description}" helpers:MaxLengthHelper.Attach="True" TextWrapping="Wrap" MinHeight="60" Style="{StaticResource EditableTextBoxStyle}"/>
                    </StackPanel>
                </Border>

                <TextBlock Text="СКЛАД И ЦЕНЫ" Style="{StaticResource SectionHeaderStyle}"/>
                <Border Style="{StaticResource InfoBorderStyle}">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Цена продажи (BYN)"/>
                                <TextBox Text="{Binding Price}" Style="{StaticResource EditableTextBoxStyle}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Количество на складе"/>
                                <TextBox Text="{Binding StockQuantity}" Style="{StaticResource EditableTextBoxStyle}"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="Поставщик *"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ComboBox Grid.Column="0" ItemsSource="{Binding AllSuppliers}" 
                                      SelectedItem="{Binding SelectedSupplier}" 
                                      DisplayMemberPath="Name"
                                      Style="{StaticResource PageComboBoxStyle}"/>

                            <Button Grid.Column="1" Content="+" Width="30" Height="30" Margin="10,0,0,0" 
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Command="{Binding AddSupplierCommand}" ToolTip="Добавить нового поставщика"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Отмена" IsCancel="True" Style="{StaticResource SecondaryButtonStyle}" Width="100" Margin="0,0,15,0"/>
            <Button Content="Сохранить" Command="{Binding SaveCommand}" Style="{StaticResource AccentButtonStyle}" Width="120"/>
        </StackPanel>
    </Grid>
</Window>