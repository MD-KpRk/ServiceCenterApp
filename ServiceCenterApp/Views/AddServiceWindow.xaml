<Window x:Class="ServiceCenterApp.Views.AddServiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить услугу" Height="400" Width="500"
        Language="be-BY"
        WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Выберите услугу из списка:" Margin="0,0,0,10" FontWeight="SemiBold"/>

        <DataGrid Grid.Row="1" ItemsSource="{Binding AllServices}" SelectedItem="{Binding SelectedService}"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  Style="{StaticResource ModernDataGridStyle}"
                  ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeaderStyle}"
                  RowStyle="{StaticResource ModernDataGridRowStyle}"
                  CellStyle="{StaticResource ModernDataGridCellStyle}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Базовая цена" Binding="{Binding BasePrice, StringFormat={}{0:C2}}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Отмена" IsCancel="True" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,10,0"/>
            <Button Content="Добавить" Click="Add_Click" Style="{StaticResource AccentButtonStyle}" Width="100"/>
        </StackPanel>
    </Grid>
</Window>