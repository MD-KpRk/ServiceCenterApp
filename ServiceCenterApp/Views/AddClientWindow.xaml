<Window x:Class="ServiceCenterApp.Views.AddClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:helpers="clr-namespace:ServiceCenterApp.Helpers"
        mc:Ignorable="d"
        Title="Новый клиент" Height="500" Width="600"
        WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Добавление клиента" FontSize="24" FontWeight="Bold" Foreground="{StaticResource DarkBackgroundBrush}" Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Фамилия *" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Surname}" MaxLength="64" Style="{StaticResource EditableTextBoxStyle}"/>

                <TextBlock Text="Имя *" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,5"/>
                <TextBox Text="{Binding FirstName}" MaxLength="64" Style="{StaticResource EditableTextBoxStyle}"/>

                <TextBlock Text="Отчество" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Patronymic}" MaxLength="64" Style="{StaticResource EditableTextBoxStyle}"/>

                <TextBlock Text="Телефон *" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,5"/>
                <TextBox Text="{Binding PhoneNumber}" MaxLength="24" Style="{StaticResource EditableTextBoxStyle}"/>

                <TextBlock Text="Email" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Email}" MaxLength="48" Style="{StaticResource EditableTextBoxStyle}"/>

                <TextBlock Text="Комментарий" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Comment}" MaxLength="1000" TextWrapping="Wrap" MinHeight="60" Style="{StaticResource EditableTextBoxStyle}"/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Отмена" IsCancel="True" Style="{StaticResource SecondaryButtonStyle}" Width="100" Margin="0,0,15,0"/>
            <Button Content="Сохранить" Command="{Binding SaveCommand}" Style="{StaticResource AccentButtonStyle}" Width="120"/>
        </StackPanel>
    </Grid>
</Window>