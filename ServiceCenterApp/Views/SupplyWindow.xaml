<Window x:Class="ServiceCenterApp.Views.SupplyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Поставка товара" Height="250" Width="350"
        WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="ОПРИХОДОВАНИЕ ТОВАРА" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15"/>

            <TextBlock Text="Количество (шт):"/>
            <TextBox Text="{Binding IncomingQuantity}" Style="{StaticResource EditableTextBoxStyle}"/>

            <TextBlock Text="Цена закупки за 1 шт (BYN):"/>
            <TextBox Text="{Binding IncomingPrice}" Style="{StaticResource EditableTextBoxStyle}"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                <Button Content="Отмена" IsCancel="True" Style="{StaticResource SecondaryButtonStyle}" Width="80" Margin="0,0,10,0"/>
                <Button Content="Принять" IsDefault="True" Command="{Binding ConfirmCommand}" Style="{StaticResource AccentButtonStyle}" Width="100"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>