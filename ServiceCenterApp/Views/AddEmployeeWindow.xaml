<Window x:Class="ServiceCenterApp.Views.AddEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" 
        Title="Новый сотрудник" Height="650" Width="600"
        WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow" Loaded="Window_Loaded">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Регистрация сотрудника" FontSize="24" FontWeight="Bold" Foreground="{StaticResource DarkBackgroundBrush}" Margin="0,0,0,20"/>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="ЛИЧНЫЕ ДАННЫЕ" Style="{StaticResource SectionHeaderStyle}"/>
                <Border Style="{StaticResource InfoBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="Фамилия *"/>
                        <TextBox Text="{Binding SurName}" Style="{StaticResource EditableTextBoxStyle}"/>
                        <TextBlock Text="Имя *"/>
                        <TextBox Text="{Binding FirstName}" Style="{StaticResource EditableTextBoxStyle}"/>
                        <TextBlock Text="Отчество"/>
                        <TextBox Text="{Binding Patronymic}" Style="{StaticResource EditableTextBoxStyle}"/>
                        <TextBlock Text="Контакты (телефон/email)"/>
                        <TextBox Text="{Binding ContactInfo}" Style="{StaticResource EditableTextBoxStyle}"/>
                    </StackPanel>
                </Border>

                <TextBlock Text="ДОСТУП И РОЛЬ" Style="{StaticResource SectionHeaderStyle}"/>
                <Border Style="{StaticResource InfoBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="Должность *"/>
                        <ComboBox ItemsSource="{Binding AllPositions}" SelectedItem="{Binding SelectedPosition}" DisplayMemberPath="PositionName" Style="{StaticResource PageComboBoxStyle}" Margin="0,0,0,10"/>

                        <TextBlock Text="Роль в системе *"/>
                        <ComboBox ItemsSource="{Binding AllRoles}" SelectedItem="{Binding SelectedRole}" DisplayMemberPath="RoleName" Style="{StaticResource PageComboBoxStyle}" Margin="0,0,0,10"/>

                        <TextBlock Text="PIN-код для входа *"/>
                        <TextBox Text="{Binding PinCode}" MaxLength="10" Style="{StaticResource EditableTextBoxStyle}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Отмена" IsCancel="True" Style="{StaticResource SecondaryButtonStyle}" Width="100" Margin="0,0,15,0"/>
            <Button Content="Создать" Command="{Binding SaveCommand}" Style="{StaticResource AccentButtonStyle}" Width="120"/>
        </StackPanel>
    </Grid>
</Window>