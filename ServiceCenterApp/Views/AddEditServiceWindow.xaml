<Window x:Class="ServiceCenterApp.Views.AddEditServiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding WindowTitle}" Height="350" Width="400"
        Language="be-BY"
        WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding WindowTitle}" FontSize="24" FontWeight="Bold" Foreground="{StaticResource DarkBackgroundBrush}" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Название услуги *" Style="{StaticResource SectionHeaderStyle}"/>
            <TextBox Text="{Binding Name}" Style="{StaticResource EditableTextBoxStyle}"/>

            <TextBlock Text="Базовая цена (BYN)" Style="{StaticResource SectionHeaderStyle}"/>
            <TextBox Text="{Binding BasePrice}" Style="{StaticResource EditableTextBoxStyle}"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Отмена" IsCancel="True" Style="{StaticResource SecondaryButtonStyle}" Width="100" Margin="0,0,15,0"/>
            <Button Content="Сохранить" Command="{Binding SaveCommand}" Style="{StaticResource AccentButtonStyle}" Width="120"/>
        </StackPanel>
    </Grid>
</Window>