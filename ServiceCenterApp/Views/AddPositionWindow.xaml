<Window x:Class="ServiceCenterApp.Views.AddPositionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Новая должность" Height="200" Width="400"
        WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Название должности:" Margin="0,0,0,5"/>
            <TextBox x:Name="PositionNameTextBox" Style="{StaticResource EditableTextBoxStyle}"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Отмена" IsCancel="True" Style="{StaticResource SecondaryButtonStyle}" Width="80" Margin="0,0,10,0"/>
                <Button Content="OK" IsDefault="True" Click="OkButton_Click" Style="{StaticResource AccentButtonStyle}" Width="80"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>