<UserControl x:Class="ServiceCenterApp.Controls.UsedSparePartControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ServiceCenterApp.Controls"
             mc:Ignorable="d" 
             Language="be-BY"
             d:DesignHeight="50" d:DesignWidth="800">
    <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="10,8">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Название и Артикул -->
            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                <TextBlock Text="{Binding Name}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                <TextBlock Text="{Binding PartNumber}" Foreground="Gray" FontSize="11"/>
            </StackPanel>

            <!-- Остаток на складе -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0">
                <TextBlock Text="Остаток:" FontSize="11" Foreground="Gray" HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding StockQuantity}" FontWeight="SemiBold" HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Управление количеством -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button Command="{Binding DecreaseQuantityCommand}" Content="-" FontSize="16" Style="{StaticResource SecondaryButtonStyle}" Width="20" Padding="8,4" Margin="0,0,5,0"/>
                <TextBox Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" 
                         Width="50" 
                         TextAlignment="Center" 
                         VerticalContentAlignment="Center"
                         MaxLength="7" 
                         PreviewTextInput="NumberValidationTextBox"
                         DataObject.Pasting="TextBox_Pasting"/>
                <Button Command="{Binding IncreaseQuantityCommand}" Content="+" FontSize="16" Style="{StaticResource SecondaryButtonStyle}" Width="20" Padding="8,4" Margin="5,0,0,0"/>
            </StackPanel>

            <!-- Цена за шт. -->
            <TextBlock Grid.Column="3" Text="{Binding Price, StringFormat={}{0:C0}}" 
                       VerticalAlignment="Center" HorizontalAlignment="Right" Margin="10,0"/>

            <!-- Итоговая сумма -->
            <TextBlock Grid.Column="4" Text="{Binding TotalSum, StringFormat={}{0:C0}}" 
                       FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        </Grid>
    </Border>
</UserControl>